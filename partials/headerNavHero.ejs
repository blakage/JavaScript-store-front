<header>
    <!-- Search Bar -->
    <div class="search-bar">
        <input type="text" placeholder="Search..." id="searchInput">
        <button onclick="search()">Search</button>
    </div>

    <!-- JavaScript for Search -->
    <script>
        function search() {
            const searchTerm = document.getElementById("searchInput").value.toLowerCase();

            // List of tab links
            const tabLinks = [
                { name: 'Home', url: '/' },
                { name: 'Shop - Dice', url: 'dice' },
                { name: 'Shop - Accessories', url: 'accessories' },
                { name: 'My Account - My Account', url: 'account' },
                { name: 'Cart - My Cart', url: 'cart' },
                { name: 'Cart - Checkout', url: 'checkout' },
                { name: 'Cart - Order History', url: 'order-history' },
                { name: 'Contact Us', url: 'contact' }
            ];

            // Filter tab links based on the search term
            const filteredLinks = tabLinks.filter(tab => tab.name.toLowerCase().includes(searchTerm));

            // Display search suggestions as clickable links
            const suggestionContainer = document.createElement('div');
            suggestionContainer.classList.add('suggestion-container');

            filteredLinks.forEach(link => {
                const suggestionLink = document.createElement('a');
                suggestionLink.href = link.url;
                suggestionLink.textContent = link.name;
                suggestionContainer.appendChild(suggestionLink);
                suggestionContainer.appendChild(document.createElement('br'));
            });

            // Clear previous suggestions and display new suggestions
            const searchBar = document.querySelector('.search-bar');
            const previousSuggestions = document.querySelector('.suggestion-container');
            if (previousSuggestions) {
                searchBar.removeChild(previousSuggestions);
            }
            searchBar.appendChild(suggestionContainer);
        }
    </script>
</header>

